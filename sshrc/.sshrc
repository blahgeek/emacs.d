#!/bin/bash

vterm_printf(){
    if [ -n "$TMUX" ] && ([ "${TERM%%-*}" = "tmux" ] || [ "${TERM%%-*}" = "screen" ] ); then
        # Tell tmux to pass the escape sequences through
        printf "\ePtmux;\e\e]%s\007\e\\" "$1"
    elif [ "${TERM%%-*}" = "screen" ]; then
        # GNU screen (screen, screen-256color, screen-256color-bce)
        printf "\eP\e]%s\007\e\\" "$1"
    else
        printf "\e]%s\e\\" "$1"
    fi
}

vterm_cmd() {
    local vterm_elisp
    vterm_elisp=""
    while [ $# -gt 0 ]; do
        vterm_elisp="$vterm_elisp""$(printf '"%s" ' "$(printf "%s" "$1" | sed -e 's|\\|\\\\|g' -e 's|"|\\"|g')")"
        shift
    done
    vterm_printf "51;E$vterm_elisp"
}

tramp_host_prefix(){
    if [ -n "$SSH_CONNECTION" ]; then
        SSH_CONNECTION_ARRAY=(${SSH_CONNECTION})
        SSH_HOST=${SSH_CONNECTION_ARRAY[2]}
        SSH_PORT=${SSH_CONNECTION_ARRAY[3]}
        echo "/ssh:${USER}@${SSH_HOST}#${SSH_PORT}:"
    else
        echo ""
    fi
}

vterm_prompt_end(){
    vterm_cmd set-pwd "$(tramp_host_prefix)$PWD"
}

vterm_find_file(){
    FILENAME="$(tramp_host_prefix)$(realpath "$1")"

    read -p "Opening $FILENAME using emacs find-file, continue? " -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        vterm_cmd find-file "$FILENAME"
    fi
}

PS1=$PS1'\[$(vterm_prompt_end)\]'

alias vim=vterm_find_file
